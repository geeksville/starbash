{
    // ---- General Editor Settings ----
    // This tells VS Code to automatically remove any trailing whitespace
    // from all files when you save them.
    "files.trimTrailingWhitespace": true,
    // This enables the "format on save" feature for all languages that
    // have a configured formatter.
    "editor.formatOnSave": true,
    // ---- Python-Specific Settings ----
    // This block specifies settings just for Python files.
    "[python]": {
        // Use Ruff for both formatting and linting
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    // Enable Pylance type checking to catch import errors and type issues
    // "basic" mode catches import errors without being too strict about types
    "python.analysis.typeCheckingMode": "basic",
    "cSpell.words": [
        "apeture",
        "ASIAIR",
        "myxauth",
        "Oiii",
        "SEESTAR",
        "starbash"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}