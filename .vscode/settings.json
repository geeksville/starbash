{
    // ---- General Editor Settings ----
    // Disable automatic trailing whitespace removal globally
    "files.trimTrailingWhitespace": false,
    // This enables the "format on save" feature for all languages that
    // have a configured formatter.
    // Note: Ruff is configured (in pyproject.toml) to only format files in src/ and tests/
    "editor.formatOnSave": true,
    // Exclude GraXpert directory from file watcher (performance)
    "files.watcherExclude": {
        "GraXpert/**": true
    },
    // Exclude GraXpert and siril-scripts from Ruff formatting and linting
    "ruff.exclude": [
        "GraXpert/**",
        "siril-scripts/**",
        "doc/**",
        "examples/**"
    ],
    // ---- Python-Specific Settings ----
    // This block specifies settings just for Python files.
    "[python]": {
        // Use Ruff for both formatting and linting
        "editor.defaultFormatter": "charliermarsh.ruff",
        // Note: files.trimTrailingWhitespace is disabled globally to avoid
        // modifying external scripts in siril-scripts/
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    // Use the Ruff binary from our Poetry virtual environment to ensure consistency
    "ruff.path": [
        "/workspaces/starbash/.venv/bin/ruff"
    ],
    // Disable Pylance type checking - using BasedPyright extension instead
    "python.analysis.typeCheckingMode": "off",
    // BasedPyright settings (requires detachhead.basedpyright extension)
    "basedpyright.analysis.typeCheckingMode": "basic",
    "cSpell.words": [
        "apeture",
        "ASIAIR",
        "myxauth",
        "Oiii",
        "SEESTAR",
        "starbash"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.debugpy.justMyCode": false,
    // Turned off because we manually enable it in the post-create.sh 
    "terminal.integrated.shellIntegration.enabled": false
}