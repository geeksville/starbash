{
    // ---- General Editor Settings ----
    // This tells VS Code to automatically remove any trailing whitespace
    // from all files when you save them.
    "files.trimTrailingWhitespace": true,
    // This enables the "format on save" feature for all languages that
    // have a configured formatter.
    "editor.formatOnSave": true,
    // Exclude GraXpert directory from file watcher (performance)
    "files.watcherExclude": {
        "GraXpert/**": true
    },
    // Exclude GraXpert from Ruff formatting and linting
    "ruff.exclude": [
        "GraXpert/**"
    ],
    // ---- Python-Specific Settings ----
    // This block specifies settings just for Python files.
    "[python]": {
        // Use Ruff for both formatting and linting
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    // Use the Ruff binary from our Poetry virtual environment to ensure consistency
    "ruff.path": [
        "/workspaces/starbash/.venv/bin/ruff"
    ],
    // Disable Pylance type checking - using BasedPyright extension instead
    "python.analysis.typeCheckingMode": "off",
    // BasedPyright settings (requires detachhead.basedpyright extension)
    "basedpyright.analysis.typeCheckingMode": "basic",
    "cSpell.words": [
        "apeture",
        "ASIAIR",
        "myxauth",
        "Oiii",
        "SEESTAR",
        "starbash"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.debugpy.justMyCode": false
}